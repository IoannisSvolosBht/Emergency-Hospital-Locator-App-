{
  "short_name": "React App", // Kurzer Name der Anwendung
  "name": "Create React App Sample", // Vollständiger Name der Anwendung
  "icons": [
    {
      "src": "favicon.ico", // Favicon der Anwendung
      "sizes": "64x64 32x32 24x24 16x16", // Verschiedene Größen des Favicons
      "type": "image/x-icon" // MIME-Typ des Favicons
    },
    {
      "src": "logo192.png", // Logo in 192x192 Pixel
      "type": "image/png", // MIME-Typ des Logos
      "sizes": "192x192" // Größe des Logos
