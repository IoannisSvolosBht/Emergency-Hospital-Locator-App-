    {
      "src": "logo512.png", // Logo in 512x512 Pixel
      "type": "image/png", // MIME-Typ des Logos
      "sizes": "512x512" // Größe des Logos
    }
  ],
  "start_url": ".", // Start-URL der Anwendung
  "display": "standalone", // Anzeigemodus der Anwendung (standalone = wie eine native App)
